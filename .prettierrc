{
  "phpVersion": "8.0",
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "bracketSameLine": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": [
        "*.php"
      ],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": [
        "*.blade.php"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "plugins": [
    "@shufo/prettier-plugin-blade"
  ]
}
